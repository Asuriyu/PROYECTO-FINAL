{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProductReviewCodeSchema",
  "type": "object",
  "required": [
    "id",
    "title",
    "rating",
    "comment",
    "status",
    "author",
    "reviewSubject",
    "createdAt"
  ],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "title": {
      "type": "string"
    },
    "rating": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5
    },
    "comment": {
      "type": ["string", "null"]
    },
    "status": {
      "type": "string",
      "enum": ["new", "accepted", "rejected"]
    },
    "author": {
      "type": "object",
      "required": ["email", "firstName", "lastName"],
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "reviewSubject": {
      "type": "string",
      "description": "URI del producto rese√±ado (por ejemplo: /api/v2/shop/products/XXX)"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": ["string", "null"],
      "format": "date-time"
    }
  },
  "additionalProperties": false
}