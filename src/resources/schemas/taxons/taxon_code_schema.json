{
    "type": "object",
    "required": [
        "@context",
        "@id",
        "@type",
        "children",
        "code",
        "enabled",
        "id",
        "images",
        "parent",
        "position",
        "translations"
    ],
    "properties": {
        "@context": {
            "type": "string",
            "format": "uri-reference"
        },
        "@id": {
            "type": "string",
            "format": "uri-reference"
        },
        "@type": {
            "type": "string",
            "const": "Taxon"
        },
        "images": {
            "type": "array"
        },
        "id": {
            "type": "integer"
        },
        "code": {
            "type": "string"
        },
        "parent": {
            "oneOf": [
                { "type": "string", "format": "uri-reference" },
                { "type": "null" }
            ]
        },
        "children": {
            "type": "array",
            "items": { "type": "string", "format": "uri-reference" }
        },
        "position": {
            "type": "integer"
        },
        "enabled": {
            "type": "boolean"
        },
        "translations": {
            "type": "object",
            "minProperties": 1,
            "patternProperties": {
                "^[a-z]{2}_[A-Z]{2}$": {
                    "type": "object",
                    "required": [
                        "@id",
                        "@type",
                        "description",
                        "id",
                        "name",
                        "slug"
                    ],
                    "properties": {
                        "@id": {
                            "type": "string", "format": "uri-reference"
                        },
                        "@type": {
                            "type": "string", "const": "TaxonTranslation"
                        },
                        "id": {
                            "type": "integer"
                        },
                        "name": {
                            "type": "string"
                        },
                        "slug": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}