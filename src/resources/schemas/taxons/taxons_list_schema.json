{
    "type": "object",
    "required": [
        "@context",
        "@id",
        "@type",
        "hydra:member",
        "hydra:totalItems"
    ],
    "properties": {
        "@context": {
            "type": "string", "format": "uri-reference"
        },
        "@id": {
            "type": "string", "format": "uri-reference"
        },
        "@type": {
            "type": "string", "const": "hydra:Collection"
        },
        "hydra:totalItems": {
            "type": "integer", "minimum": 0
        },
        "hydra:member": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "@id": {
                        "type": "string", "format": "uri-reference"
                    },
                    "@type": {
                        "type": "string", "const": "Taxon"
                    },
                    "images": {
                        "type": "array"
                    },
                    "id": {
                        "type": "integer"
                    },
                    "code": {
                        "type": "string"
                    },
                    "parent": {
                        "oneOf": [
                            { "type": "string", "format": "uri-reference" },
                            { "type": "null" }
                        ]
                    },
                    "children": {
                        "type": "array",
                        "items": {
                            "type": "string", "format": "uri-reference"
                        }
                    },
                    "position": {
                        "type": "integer"
                    },
                    "enabled": {
                        "type": "boolean"
                    },
                    "translations": {
                        "type": "object",
                        "minProperties": 1,
                        "patternProperties": {
                            "^[a-z]{2}_[A-Z]{2}$": {
                                "type": "object",
                                "properties": {
                                    "@id": {
                                        "type": "string", "format": "uri-reference"
                                    },
                                    "@type": {
                                        "type": "string", "const": "TaxonTranslation"
                                    },
                                    "id": {
                                        "type": "integer"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "slug": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "@id",
                                    "@type",
                                    "description",
                                    "id",
                                    "name",
                                    "slug"
                                ]
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "required": [
                    "@id",
                    "@type",
                    "children",
                    "code",
                    "enabled",
                    "id",
                    "images",
                    "parent",
                    "position",
                    "translations"
                ]
            }
        },
        "hydra:view":   { "type": "object", "additionalProperties": true },
        "hydra:search": { "type": "object", "additionalProperties": true }
    }
}